<div class='table-responsive'>
  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>原文</th>
        <th>結果</th>
        <th>全文顯示</th>
        <th>編輯</th>
        <th>刪除</th>
        <th>分享</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class='col-md-3'><%= safe_truncate_content(post.source, 80) %></td>
          <td class='col-md-3'><%= safe_truncate_content(post.result, 80) %></td>
          <td class='col-md-1'><%= link_to 'Show', post %></td>
          <td class='col-md-1'>
            <%= link_to edit_post_path(post), class: 'btn btn-default btn-sm' do %>
              <span class='glyphicon glyphicon-pencil'></span>
            <% end %>
          </td>
          <td class='col-md-1'>
            <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <span class='glyphicon glyphicon-trash'></span>
            <% end %>
          </td>
          <td class='col-md-4'>
            <div class="input-group">
              <input type="text" id="<%= post.token %>" class="form-control" value="<%= post_url(post) %>" readonly='readonly'>
              <span class="input-group-btn">
                <button id='clipboard'
                title='copy to clipboard'
                data-toggle="tooltip"
                data-placement="bottom"
                class='copy-button btn btn-default' type='button' data-clipboard-target="<%= post.token %>" >
                  <%= fa_icon 'clipboard' %>
                </button>
              </span>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
