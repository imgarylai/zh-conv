      <%= f.radio_button :option, 'tw', checked: true %>tw
    <% end %>
    <%= f.label :option do %>
      <%= f.radio_button :option, 'sg' %>sg
    <% end %>
    <%= f.label :option do %>
      <%= f.radio_button :option, 'hk' %>hk
    <% end %>
    <%= f.label :option do %>
      <%= f.radio_button :option, 'cn' %>cn
    <% end %>
  </div>
  <div class='form-group'>
    <%= f.submit class: 'btn btn-default' %>
  </div>
  <% end %>
</div>
